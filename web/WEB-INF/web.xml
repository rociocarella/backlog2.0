<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>controlador.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SAgregar</servlet-name>
        <servlet-class>controlador.SAgregar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SLeer</servlet-name>
        <servlet-class>controlador.SLeer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SLeerTodos</servlet-name>
        <servlet-class>controlador.SLeerTodos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SEliminar</servlet-name>
        <servlet-class>controlador.SEliminar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SActualizar</servlet-name>
        <servlet-class>controlador.SActualizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SLogin</servlet-name>
        <servlet-class>controlador.SLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SAgregarV</servlet-name>
        <servlet-class>controlador.SAgregarV</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/Inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SAgregar</servlet-name>
        <url-pattern>/registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SLeer</servlet-name>
        <url-pattern>/Leer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SLeerTodos</servlet-name>
        <url-pattern>/LeerTodos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SEliminar</servlet-name>
        <url-pattern>/Eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SActualizar</servlet-name>
        <url-pattern>/Actualizar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SLogin</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SAgregarV</servlet-name>
        <url-pattern>/SAgregarV</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
